{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"rootDirs": ["src", "test"],

		"strict": true,
		"downlevelIteration": true,

		"esModuleInterop": true,
		"skipDefaultLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["src/**/*.ts", "test/**/*.ts"],
}
